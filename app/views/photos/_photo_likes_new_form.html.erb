<!-- Form like start -->
<%= form_with(model: @like, local: true) do |f| %>
<!-- Form like end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <%= f.label :user_id %>
    <!-- Input for user_id start -->
    <%= f.select :user_id, options_from_collection_for_select(User.all, :id, :to_s, @like.user_id), {}, class: "form-control" %>
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <!-- Label and input for photo_id start -->
  <!-- Input for photo_id start -->
  <%= f.hidden_field :photo_id, value: @photo.id %>
  <!-- Input for photo_id end -->
  <!-- Label and input for photo_id end -->

  <%= f.submit "Create like", class: "btn btn-block btn-outline-secondary" %>
<% end %>
