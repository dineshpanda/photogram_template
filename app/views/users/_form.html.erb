<% was_validated = user.errors.any? %>

<%= form_with(model: user, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% username_class = "form-control" %>
    <% username_was_invalid = user.errors.include?(:username) %>

    <% if was_validated %>
      <% if username_was_invalid %>
        <% username_class << " is-invalid" %>
      <% else %>
        <% username_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :username %>
    <%= f.text_field :username, class: username_class, placeholder: "Enter username" %>
    <% if username_was_invalid %>
      <% user.errors.full_messages_for(:username).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% fname_class = "form-control" %>
    <% fname_was_invalid = user.errors.include?(:fname) %>

    <% if was_validated %>
      <% if fname_was_invalid %>
        <% fname_class << " is-invalid" %>
      <% else %>
        <% fname_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :fname %>
    <%= f.text_field :fname, class: fname_class, placeholder: "Enter fname" %>
    <% if fname_was_invalid %>
      <% user.errors.full_messages_for(:fname).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% lname_class = "form-control" %>
    <% lname_was_invalid = user.errors.include?(:lname) %>

    <% if was_validated %>
      <% if lname_was_invalid %>
        <% lname_class << " is-invalid" %>
      <% else %>
        <% lname_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :lname %>
    <%= f.text_field :lname, class: lname_class, placeholder: "Enter lname" %>
    <% if lname_was_invalid %>
      <% user.errors.full_messages_for(:lname).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% image_class = "form-control" %>
    <% image_was_invalid = user.errors.include?(:image) %>

    <% if was_validated %>
      <% if image_was_invalid %>
        <% image_class << " is-invalid" %>
      <% else %>
        <% image_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :image %>
    <%= f.text_field :image, class: image_class, placeholder: "Enter image" %>
    <% if image_was_invalid %>
      <% user.errors.full_messages_for(:image).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
